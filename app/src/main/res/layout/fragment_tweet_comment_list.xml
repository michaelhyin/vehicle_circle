<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/channel_item_margin"
    android:layout_marginTop="@dimen/channel_item_margin_top"
    android:layout_marginRight="@dimen/channel_item_margin">
    <TextView
        android:textSize="14.0sp"
        android:textColor="@color/channel_item_second_title_color"
        android:id="@id/comment_list_item_title"
        android:paddingTop="10.0dip"
        android:paddingBottom="10.0dip"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <cn.com.weilaihui3.common.widget.HeaderView
        android:id="@id/comment_list_item_header_view"
        android:layout_width="@dimen/ugc_list_profile_icon_size"
        android:layout_height="@dimen/ugc_list_profile_icon_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comment_list_item_title" />
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@id/ll_name"
        android:layout_width="@dimen/public_zero_size"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/comment_list_item_content_margin_left"
        app:layout_constraintLeft_toRightOf="@+id/comment_list_item_header_view"
        app:layout_constraintRight_toLeftOf="@+id/comment_list_item_count_flag"
        app:layout_constraintTop_toTopOf="@id/comment_list_item_header_view">
        <TextView
            android:textSize="@dimen/comment_name_size"
            android:textColor="@color/community_comment_name_color"
            android:ellipsize="end"
            android:id="@id/comment_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:drawableRight="@drawable/nio_cert_icon"
            android:drawablePadding="@dimen/comment_list_item_nio_icon_margin_left" />
    </LinearLayout>
    <TextView
        android:textSize="@dimen/comment_list_item_time_text_size"
        android:textColor="@color/channel_item_second_title_color"
        android:id="@id/comment_list_item_time"
        android:layout_width="@dimen/public_zero_size"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/comment_list_item_content_margin_left"
        app:layout_constraintLeft_toRightOf="@id/comment_list_item_header_view"
        app:layout_constraintRight_toLeftOf="@id/comment_list_item_count_tip"
        app:layout_constraintTop_toBottomOf="@id/ll_name" />
    <android.support.constraint.Guideline
        android:orientation="vertical"
        android:id="@id/g_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="100.0dip" />
    <TextView
        android:textSize="14.0sp"
        android:textColor="@color/channel_item_second_title_color"
        android:gravity="center_vertical"
        android:id="@id/comment_list_item_count_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/comment_list_item_header_view"
        app:layout_constraintRight_toLeftOf="@id/comment_list_item_count_flag"
        app:layout_constraintTop_toTopOf="@id/comment_list_item_header_view" />
    <ImageView
        android:id="@id/comment_list_item_count_flag"
        android:paddingLeft="@dimen/comment_list_item_like_icon_padding"
        android:paddingTop="@dimen/comment_list_item_like_icon_padding"
        android:paddingBottom="@dimen/comment_list_item_like_icon_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/comment_icon_agree_normal"
        app:layout_constraintBottom_toBottomOf="@id/comment_list_item_header_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/comment_list_item_header_view" />
    <TextView
        android:textSize="@dimen/comment_name_size"
        android:textColor="@color/community_comment_name_color"
        android:id="@id/comment_list_item_count_content"
        android:layout_width="@dimen/public_zero_size"
        android:layout_height="wrap_content"
        android:layout_marginTop="11.0dip"
        app:layout_constraintLeft_toLeftOf="@id/ll_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comment_list_item_header_view" />
    <com.nio.comment.ui.view.ReplyView
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@id/comment_list_item_reply_content_layout"
        android:background="@drawable/selector_comment_reply_bg"
        android:padding="@dimen/comment_list_item_reply_content_layout_padding"
        android:layout_width="@dimen/public_zero_size"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/comment_list_item_reply_content_layout_margin_top"
        app:layout_constraintHeight_min="@dimen/comment_list_item_reply_content_layout_min_height"
        app:layout_constraintLeft_toLeftOf="@id/ll_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comment_list_item_count_content" />
    <View android:id="@id/v_long_line"
        android:background="@color/channel_item_line_color"
        android:layout_width="@dimen/public_zero_size"
        android:layout_height="@dimen/public_line_height"
        android:layout_marginLeft="@dimen/v_long_line_margin_left"
        android:layout_marginTop="@dimen/channel_item_margin_top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comment_list_item_reply_content_layout" />
    <View android:id="@id/v_short_line"
        android:background="@color/channel_item_line_color"
        android:layout_width="@dimen/public_zero_size"
        android:layout_height="@dimen/public_line_height"
        android:layout_marginTop="@dimen/channel_item_margin_top"
        app:layout_constraintLeft_toLeftOf="@id/ll_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comment_list_item_reply_content_layout" />
</android.support.constraint.ConstraintLayout>